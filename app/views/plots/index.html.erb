<html>
<head>
<style>
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #416a59;
}
li {
  float: left;
}
a {
  display: block;
  color: #d3d3d3;
  padding: 10px;
  text-align: center;
  border-right: 1px solid #d3d3d3;
}
</style>
</head>
<body>

<div class='topBar'>
<ul>
  <li><%= link_to 'All Organisms', '/organisms' %></li>
  <li><%= link_to 'New Plot', '/plots/new' %></li>
  </br>
</ul>
</div>

<h1>Plots of Land</h1>

<%= form_with url: "/plots", method: :get do %>
  <%= label_tag :search_name %>
  <%= text_field_tag :search_name, params[:search_name] %>

  <%= submit_tag "Submit" %>
<% end %>

<% @plots.each do |plot| %>
  <h2><%= plot.name %></h2> 
  <p><%= plot.created_at %></p>
  
  <%= link_to "Update #{plot.name}", "/plots/#{plot.id}/edit" %>
  <%= link_to "Delete #{plot.name}", "/plots/#{plot.id}", data: {turbo_method: :delete} %>
<% end %>

<%= link_to 'Order by Organism Count', :sort_count => 'count' %>

</body>
</html>